<!DOCTYPE html>
<html lang="<%= language %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= t('departments:management.newDepartment') %> - <%= t('common:app.name') %></title>
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <!-- Tailwind CSS -->
  <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-gray-50">
  <%- include('../../partials/header') %>

  <main class="container-fluid px-4 py-6">
    <h2 class="text-2xl font-bold mb-4"><%= t('departments:management.newDepartment') %></h2>
    <%- include('../../partials/flash') %>

    <div class="card" style="max-width: 600px;">
      <div class="card-body p-4">
        <form action="/admin/departments" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">

          <div class="mb-3">
            <label for="name" class="form-label"><%= t('departments:fields.name') %> *</label>
            <input type="text" id="name" name="name" class="form-input" required maxlength="100"
                   placeholder="<%= t('departments:form.namePlaceholder') %>">
            <small class="text-sm text-gray-600"><%= t('departments:form.nameHelp') %></small>
          </div>

          <div class="mb-3">
            <label for="floor" class="form-label"><%= t('departments:fields.floor') %> *</label>
            <select id="floor" name="floor" class="form-select" required>
              <option value=""><%= t('departments:form.selectFloor') %></option>
              <option value="Basement">Basement</option>
              <option value="Ground Floor">Ground Floor</option>
              <option value="1st Floor">1st Floor</option>
              <option value="2nd Floor">2nd Floor</option>
              <option value="3rd Floor">3rd Floor</option>
              <option value="4th Floor">4th Floor</option>
              <option value="5th Floor">5th Floor</option>
              <option value="6th Floor">6th Floor</option>
            </select>
            <small class="text-sm text-gray-600"><%= t('departments:form.floorHelp') %></small>
          </div>

          <div class="mb-4">
            <label for="description" class="form-label"><%= t('departments:fields.description') %></label>
            <textarea id="description" name="description" class="form-textarea" rows="3" maxlength="500"
                      placeholder="<%= t('departments:form.descriptionPlaceholder') %>"></textarea>
            <small class="text-sm text-gray-600"><%= t('departments:form.descriptionHelp') %></small>
          </div>

          <div class="flex gap-2">
            <button type="submit" class="btn btn-primary"><%= t('departments:management.createDepartment') %></button>
            <a href="/admin/departments" class="btn btn-secondary"><%= t('common:actions.cancel') %></a>
          </div>
        </form>
      </div>
    </div>
  </main>

  <%- include('../../partials/footer') %>
</body>
</html>

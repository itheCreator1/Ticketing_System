<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <!-- Tailwind CSS -->
  <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-gray-50">
  <%- include('../../partials/header') %>

  <main class="container-fluid px-4 py-6">
    <h2 class="text-2xl font-bold mb-4">Edit Department: <%= department.name %></h2>
    <%- include('../../partials/flash') %>

    <div class="card" style="max-width: 600px;">
      <div class="card-body p-4">
        <form action="/admin/departments/<%= department.id %>" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">

          <div class="mb-3">
            <label for="name" class="form-label">Department Name *</label>
            <input type="text" id="name" name="name" class="form-input"
                   value="<%= department.name %>" required maxlength="100">
          </div>

          <div class="mb-4">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="description" class="form-textarea"
                      rows="3" maxlength="500"><%= department.description || '' %></textarea>
          </div>

          <div class="flex gap-2">
            <button type="submit" class="btn btn-primary">Update Department</button>
            <a href="/admin/departments" class="btn btn-secondary">Cancel</a>
          </div>
        </form>
      </div>
    </div>

    <!-- User Management Section -->
    <div class="card mt-4" style="max-width: 900px;">
      <div class="card-body p-4">
        <h3 class="text-lg font-semibold mb-3">Assigned Users</h3>

        <% if (users.length > 0) { %>
          <div class="overflow-x-auto mb-4">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Username</th>
                  <th>Email</th>
                  <th>Status</th>
                  <th>Active Tickets</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(user => { %>
                  <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td>
                      <% if (user.status === 'active') { %>
                        <span class="badge badge-success">Active</span>
                      <% } else { %>
                        <span class="badge badge-secondary"><%= user.status %></span>
                      <% } %>
                    </td>
                    <td><%= user.active_tickets || 0 %></td>
                    <td>
                      <form action="/admin/departments/<%= department.id %>/users/<%= user.id %>/remove"
                            method="POST"
                            class="inline remove-user-form"
                            data-username="<%= user.username %>"
                            data-tickets="<%= user.active_tickets || 0 %>">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                      </form>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-gray-600">No users assigned to this department.</p>
        <% } %>

        <!-- Add User Form -->
        <h4 class="text-base font-medium mb-3 mt-4">Assign User to Department</h4>
        <% if (availableUsers.length > 0) { %>
          <form action="/admin/departments/<%= department.id %>/users/add" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-2 items-end">
              <div class="md:col-span-3">
                <label for="user_id" class="form-label">Select User</label>
                <select id="user_id" name="user_id" class="form-select" required>
                  <option value="">Choose a user...</option>
                  <% availableUsers.forEach(user => { %>
                    <option value="<%= user.id %>">
                      <%= user.username %> (<%= user.email %>)
                      <% if (user.department) { %> - Currently in: <%= user.department %><% } %>
                    </option>
                  <% }); %>
                </select>
              </div>
              <div>
                <button type="submit" class="btn btn-primary w-full">Assign User</button>
              </div>
            </div>
          </form>
        <% } else { %>
          <p class="text-gray-600">No available users to assign.</p>
        <% } %>
      </div>
    </div>
  </main>

  <script>
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.remove-user-form').forEach(form => {
      form.addEventListener('submit', function(e) {
        const username = this.dataset.username;
        const tickets = parseInt(this.dataset.tickets);

        let message = `Remove ${username} from this department?`;
        if (tickets > 0) {
          message += `\n\nWarning: This user has ${tickets} active ticket(s).`;
        }

        if (!confirm(message)) {
          e.preventDefault();
          return false;
        }
      });
    });
  });
  </script>

  <%- include('../../partials/footer') %>
</body>
</html>

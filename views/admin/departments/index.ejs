<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
        crossorigin="anonymous">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/custom.css">
</head>
<body class="bg-light">
  <%- include('../../partials/header') %>

  <main class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Manage Departments</h2>
      <a href="/admin/departments/new" class="btn btn-primary">Create Department</a>
    </div>

    <%- include('../../partials/flash') %>

    <div class="card shadow-sm">
      <div class="card-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Status</th>
              <th>Type</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% departments.forEach(dept => { %>
              <tr>
                <td><strong><%= dept.name %></strong></td>
                <td><% if (dept.description) { %><%= dept.description %><% } else { %><em class="text-muted">No description</em><% } %></td>
                <td>
                  <% if (dept.active) { %>
                    <span class="badge bg-success">Active</span>
                  <% } else { %>
                    <span class="badge bg-secondary">Inactive</span>
                  <% } %>
                </td>
                <td>
                  <% if (dept.is_system) { %>
                    <span class="badge bg-info">System</span>
                  <% } else { %>
                    <span class="badge bg-light text-dark">Custom</span>
                  <% } %>
                </td>
                <td class="text-end">
                  <% if (!dept.is_system) { %>
                    <a href="/admin/departments/<%= dept.id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>

                    <% if (dept.active) { %>
                      <form action="/admin/departments/<%= dept.id %>/deactivate" method="POST" style="display:inline;"
                            onsubmit="return confirm('Deactivate this department?');">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn btn-sm btn-outline-warning">Deactivate</button>
                      </form>
                    <% } else { %>
                      <form action="/admin/departments/<%= dept.id %>/reactivate" method="POST" style="display:inline;">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn btn-sm btn-outline-success">Reactivate</button>
                      </form>
                    <% } %>
                  <% } else { %>
                    <span class="text-muted small">System department</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </main>

  <%- include('../../partials/footer') %>

  <!-- Bootstrap 5 JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
          crossorigin="anonymous"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <!-- Tailwind CSS -->
  <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-gray-50">
  <%- include('../../partials/header') %>

  <main class="container-fluid px-4 py-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold">Manage Departments</h2>
      <a href="/admin/departments/new" class="btn btn-primary">Create Department</a>
    </div>

    <%- include('../../partials/flash') %>

    <div class="card">
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Status</th>
              <th>Type</th>
              <th class="text-right">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% departments.forEach(dept => { %>
              <tr>
                <td><strong><%= dept.name %></strong></td>
                <td><% if (dept.description) { %><%= dept.description %><% } else { %><em class="text-gray-500">No description</em><% } %></td>
                <td>
                  <% if (dept.active) { %>
                    <span class="badge badge-success">Active</span>
                  <% } else { %>
                    <span class="badge badge-secondary">Inactive</span>
                  <% } %>
                </td>
                <td>
                  <% if (dept.is_system) { %>
                    <span class="badge badge-info">System</span>
                  <% } else { %>
                    <span class="badge badge-light">Custom</span>
                  <% } %>
                </td>
                <td class="text-right">
                  <% if (!dept.is_system) { %>
                    <a href="/admin/departments/<%= dept.id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>

                    <% if (dept.active) { %>
                      <form action="/admin/departments/<%= dept.id %>/deactivate" method="POST" style="display:inline;"
                            onsubmit="return confirm('Deactivate this department?');">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn btn-sm btn-outline-warning">Deactivate</button>
                      </form>
                    <% } else { %>
                      <form action="/admin/departments/<%= dept.id %>/reactivate" method="POST" style="display:inline;">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn btn-sm btn-outline-success">Reactivate</button>
                      </form>
                    <% } %>
                  <% } else { %>
                    <span class="text-gray-500 text-sm">System department</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </main>

  <%- include('../../partials/footer') %>
</body>
</html>

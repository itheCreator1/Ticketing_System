<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="bg-gray-50">
  <%- include('../partials/header') %>

  <main class="container-fluid px-4 py-6">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold">Ticket Dashboard</h2>
      <div class="flex gap-2">
        <a href="/admin/tickets/department/new" class="btn btn-primary">+ Create Department Ticket</a>
        <a href="/admin/tickets/new" class="btn btn-outline-secondary">+ Create Internal Ticket</a>
      </div>
    </div>
    <%- include('../partials/flash') %>

    <div class="card mb-6">
      <div class="card-body">
        <form action="/admin/dashboard" method="GET">
          <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
            <div>
              <label for="status" class="form-label">Status</label>
              <select name="status" id="status" class="form-select">
                <option value="">All Statuses</option>
                <option value="open" <%= filters.status === 'open' ? 'selected' : '' %>>Open</option>
                <option value="in_progress" <%= filters.status === 'in_progress' ? 'selected' : '' %>>In Progress</option>
                <option value="waiting_on_admin" <%= filters.status === 'waiting_on_admin' ? 'selected' : '' %>>Waiting on Admin</option>
                <option value="waiting_on_department" <%= filters.status === 'waiting_on_department' ? 'selected' : '' %>>Waiting on Department</option>
                <option value="closed" <%= filters.status === 'closed' ? 'selected' : '' %>>Closed</option>
              </select>
            </div>

            <div>
              <label for="priority" class="form-label">Priority</label>
              <select name="priority" id="priority" class="form-select">
                <option value="">All Priorities</option>
                <option value="unset" <%= filters.priority === 'unset' ? 'selected' : '' %>>Unset</option>
                <option value="low" <%= filters.priority === 'low' ? 'selected' : '' %>>Low</option>
                <option value="medium" <%= filters.priority === 'medium' ? 'selected' : '' %>>Medium</option>
                <option value="high" <%= filters.priority === 'high' ? 'selected' : '' %>>High</option>
                <option value="critical" <%= filters.priority === 'critical' ? 'selected' : '' %>>Critical</option>
              </select>
            </div>

            <div class="md:col-span-2">
              <label for="search" class="form-label">Search</label>
              <input type="text" name="search" id="search" class="form-input" placeholder="Search tickets..." value="<%= filters.search || '' %>">
            </div>

            <div class="flex items-end">
              <div class="flex gap-2 w-full">
                <button type="submit" class="btn btn-primary flex-1">Filter</button>
                <% if (filters.status || filters.priority || filters.search) { %>
                  <a href="/admin/dashboard" class="btn btn-secondary">Clear</a>
                <% } %>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>

    <% if (tickets.length === 0) { %>
      <div class="alert alert-secondary text-center">
        <p class="mb-0">No tickets found. <%= filters.status || filters.priority || filters.search ? 'Try adjusting your filters.' : 'Tickets will appear here when users submit them.' %></p>
      </div>
    <% } else { %>
      <div class="card mb-4">
        <div class="overflow-x-auto">
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Reporter</th>
                <th>Last Comment</th>
                <th>Created</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% tickets.forEach(ticket => { %>
                <tr>
                  <td>#<%= ticket.id %></td>
                  <td>
                    <%= ticket.title %>
                    <% if (ticket.reporter_department === 'Internal') { %>
                      <span class="badge badge-warning ml-2">Internal</span>
                    <% } %>
                  </td>
                  <td>
                    <% if (ticket.status === 'open') { %>
                      <span class="badge badge-info"><%= ticket.status.replace('_', ' ') %></span>
                    <% } else if (ticket.status === 'in_progress') { %>
                      <span class="badge badge-warning"><%= ticket.status.replace('_', ' ') %></span>
                    <% } else if (ticket.status === 'waiting_on_admin') { %>
                      <span class="badge badge-warning"><%= ticket.status.replace(/_/g, ' ') %></span>
                    <% } else if (ticket.status === 'waiting_on_department') { %>
                      <span class="badge badge-danger"><%= ticket.status.replace(/_/g, ' ') %></span>
                    <% } else if (ticket.status === 'closed') { %>
                      <span class="badge badge-success"><%= ticket.status.replace('_', ' ') %></span>
                    <% } %>
                  </td>
                  <td>
                    <% if (ticket.priority === 'unset') { %>
                      <span class="badge badge-light"><%= ticket.priority %></span>
                    <% } else if (ticket.priority === 'low') { %>
                      <span class="badge badge-secondary"><%= ticket.priority %></span>
                    <% } else if (ticket.priority === 'medium') { %>
                      <span class="badge badge-info"><%= ticket.priority %></span>
                    <% } else if (ticket.priority === 'high') { %>
                      <span class="badge badge-warning"><%= ticket.priority %></span>
                    <% } else if (ticket.priority === 'critical') { %>
                      <span class="badge badge-danger"><%= ticket.priority %></span>
                    <% } %>
                  </td>
                  <td><%= ticket.reporter_name || 'Anonymous' %></td>
                  <td class="text-sm text-gray-600 max-w-xs truncate">
                    <% if (ticket.last_comment) { %>
                      <%= ticket.last_comment.length > 100 ? ticket.last_comment.substring(0, 100) + '...' : ticket.last_comment %>
                    <% } else { %>
                      <span class="text-gray-400">No comments</span>
                    <% } %>
                  </td>
                  <td><%= new Date(ticket.created_at).toLocaleDateString() %></td>
                  <td>
                    <a href="/admin/tickets/<%= ticket.id %>" class="btn btn-sm btn-primary">View</a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="text-gray-600">
        Showing <%= tickets.length %> ticket<%= tickets.length !== 1 ? 's' : '' %>
      </div>
    <% } %>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>

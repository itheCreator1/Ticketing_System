<!DOCTYPE html>
<html lang="<%= language %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= t('tickets:dashboard.title') %> - <%= t('common:app.name') %></title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="bg-gray-50">
  <%- include('../partials/header') %>

  <main class="container-fluid px-4 py-6">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold"><%= t('tickets:dashboard.title') %></h2>
      <div class="flex gap-2">
        <a href="/admin/tickets/department/new" class="btn btn-primary"><%= t('tickets:dashboard.createDepartmentTicket') %></a>
        <a href="/admin/tickets/new" class="btn btn-outline-secondary"><%= t('tickets:dashboard.createInternalTicket') %></a>
      </div>
    </div>
    <%- include('../partials/flash') %>

    <div class="card mb-6">
      <div class="card-body">
        <form action="/admin/dashboard" method="GET">
          <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
            <div>
              <label for="status" class="form-label"><%= t('common:labels.status') %></label>
              <select name="status" id="status" class="form-select">
                <option value=""><%= t('tickets:status.all') %></option>
                <option value="open" <%= filters.status === 'open' ? 'selected' : '' %>><%= t('tickets:status.open') %></option>
                <option value="in_progress" <%= filters.status === 'in_progress' ? 'selected' : '' %>><%= t('tickets:status.in_progress') %></option>
                <option value="waiting_on_admin" <%= filters.status === 'waiting_on_admin' ? 'selected' : '' %>><%= t('tickets:status.waiting_on_admin') %></option>
                <option value="waiting_on_department" <%= filters.status === 'waiting_on_department' ? 'selected' : '' %>><%= t('tickets:status.waiting_on_department') %></option>
                <option value="closed" <%= filters.status === 'closed' ? 'selected' : '' %>><%= t('tickets:status.closed') %></option>
              </select>
            </div>

            <div>
              <label for="priority" class="form-label"><%= t('common:labels.priority') %></label>
              <select name="priority" id="priority" class="form-select">
                <option value=""><%= t('tickets:priority.all') %></option>
                <option value="unset" <%= filters.priority === 'unset' ? 'selected' : '' %>><%= t('tickets:priority.unset') %></option>
                <option value="low" <%= filters.priority === 'low' ? 'selected' : '' %>><%= t('tickets:priority.low') %></option>
                <option value="medium" <%= filters.priority === 'medium' ? 'selected' : '' %>><%= t('tickets:priority.medium') %></option>
                <option value="high" <%= filters.priority === 'high' ? 'selected' : '' %>><%= t('tickets:priority.high') %></option>
                <option value="critical" <%= filters.priority === 'critical' ? 'selected' : '' %>><%= t('tickets:priority.critical') %></option>
              </select>
            </div>

            <div class="md:col-span-2">
              <label for="search" class="form-label"><%= t('common:buttons.search') %></label>
              <input type="text" name="search" id="search" class="form-input" placeholder="<%= t('tickets:search.placeholder') %>" value="<%= filters.search || '' %>">
            </div>

            <div class="flex items-end">
              <div class="flex gap-2 w-full">
                <button type="submit" class="btn btn-primary flex-1"><%= t('common:buttons.filter') %></button>
                <% if (filters.status || filters.priority || filters.search) { %>
                  <a href="/admin/dashboard" class="btn btn-secondary"><%= t('common:buttons.clear') %></a>
                <% } %>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>

    <% if (tickets.length === 0) { %>
      <div class="alert alert-secondary text-center">
        <p class="mb-0"><%= t('tickets:emptyState.noTicketsFound') %>. <%= filters.status || filters.priority || filters.search ? t('tickets:emptyState.adjustFilters') : t('tickets:emptyState.ticketsWillAppear') %></p>
      </div>
    <% } else { %>
      <div class="card mb-4">
        <div class="overflow-x-auto">
          <table class="table">
            <thead>
              <tr>
                <th><%= t('tickets:table.id') %></th>
                <th><%= t('tickets:table.title') %></th>
                <th><%= t('tickets:table.status') %></th>
                <th><%= t('tickets:table.priority') %></th>
                <th><%= t('tickets:table.reporter') %></th>
                <th><%= t('tickets:table.lastComment') %></th>
                <th><%= t('tickets:table.created') %></th>
                <th><%= t('tickets:table.actions') %></th>
              </tr>
            </thead>
            <tbody>
              <% tickets.forEach(ticket => { %>
                <tr>
                  <td>#<%= ticket.id %></td>
                  <td>
                    <%= ticket.title %>
                    <% if (ticket.reporter_department === 'Internal') { %>
                      <span class="badge badge-warning ml-2"><%= t('tickets:badges.internal') %></span>
                    <% } %>
                  </td>
                  <td>
                    <% if (ticket.status === 'open') { %>
                      <span class="badge badge-info"><%= t('tickets:status.open') %></span>
                    <% } else if (ticket.status === 'in_progress') { %>
                      <span class="badge badge-warning"><%= t('tickets:status.in_progress') %></span>
                    <% } else if (ticket.status === 'waiting_on_admin') { %>
                      <span class="badge badge-info"><%= t('tickets:status.waiting_on_admin') %></span>
                    <% } else if (ticket.status === 'waiting_on_department') { %>
                      <span class="badge badge-warning"><%= t('tickets:status.waiting_on_department') %></span>
                    <% } else { %>
                      <span class="badge badge-success"><%= t('tickets:status.closed') %></span>
                    <% } %>
                  </td>
                  <td>
                    <% if (ticket.priority === 'unset') { %>
                      <span class="badge badge-light"><%= t('tickets:priority.unset') %></span>
                    <% } else if (ticket.priority === 'low') { %>
                      <span class="badge badge-secondary"><%= t('tickets:priority.low') %></span>
                    <% } else if (ticket.priority === 'medium') { %>
                      <span class="badge badge-info"><%= t('tickets:priority.medium') %></span>
                    <% } else if (ticket.priority === 'high') { %>
                      <span class="badge badge-warning"><%= t('tickets:priority.high') %></span>
                    <% } else if (ticket.priority === 'critical') { %>
                      <span class="badge badge-danger"><%= t('tickets:priority.critical') %></span>
                    <% } %>
                  </td>
                  <td><%= ticket.reporter_name || t('tickets:table.anonymous') %></td>
                  <td class="text-sm text-gray-600 max-w-xs truncate">
                    <% if (ticket.last_comment) { %>
                      <%= ticket.last_comment.length > 100 ? ticket.last_comment.substring(0, 100) + '...' : ticket.last_comment %>
                    <% } else { %>
                      <span class="text-gray-400"><%= t('common:labels.noComments') %></span>
                    <% } %>
                  </td>
                  <td><%= new Date(ticket.created_at).toLocaleDateString(language === 'el' ? 'el-GR' : 'en-US') %></td>
                  <td>
                    <a href="/admin/tickets/<%= ticket.id %>" class="btn btn-sm btn-primary"><%= t('common:buttons.view') %></a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="text-gray-600">
        <%= t('tickets:stats.showing', { count: tickets.length }) %>
      </div>
    <% } %>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>

<!DOCTYPE html>
<html lang="<%= language %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= t('floors:createFloor') %> - <%= t('common:app.name') %></title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="bg-gray-50">
  <%- include('../../partials/header') %>

  <main class="container-fluid px-4 py-6">
    <div class="mx-auto" style="max-width: 800px;">
      <h2 class="text-2xl font-bold mb-4"><%= t('floors:createFloor') %></h2>

      <%- include('../../partials/flash') %>

      <div class="card">
        <div class="card-body">
          <form method="POST" action="/admin/floors">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <!-- Floor Name -->
            <div class="mb-4">
              <label for="name" class="form-label">
                <%= t('floors:fields.name') %> <span class="text-red-600">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                maxlength="50"
                class="form-input"
                placeholder="<%= t('floors:placeholders.name') %>"
              >
              <p class="mt-1 text-sm text-gray-500">
                <%= t('common:maxChars', { count: 50 }) %>
              </p>
            </div>

            <!-- Sort Order -->
            <div class="mb-4">
              <label for="sort_order" class="form-label">
                <%= t('floors:fields.sortOrder') %> <span class="text-red-600">*</span>
              </label>
              <input
                type="number"
                id="sort_order"
                name="sort_order"
                required
                min="0"
                value="0"
                class="form-input"
                placeholder="0"
              >
              <p class="mt-1 text-sm text-gray-500">
                <%= t('floors:help.sortOrder') %>
              </p>
            </div>

            <!-- Buttons -->
            <div class="flex gap-2 pt-6 border-t border-gray-200">
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-lg"></i> <%= t('floors:actions.create') %>
              </button>
              <a href="/admin/floors" class="btn btn-secondary">
                <i class="bi bi-x-lg"></i> <%= t('common:cancel') %>
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <%- include('../../partials/footer') %>
</body>
</html>

<!DOCTYPE html>
<html lang="<%= language %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= t('floors:editFloor') %> - <%= t('common:app.name') %></title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="bg-gray-50">
  <%- include('../../partials/header') %>

  <main class="container-fluid px-4 py-6">
    <div class="mx-auto" style="max-width: 800px;">
      <h2 class="text-2xl font-bold mb-4"><%= t('floors:editFloor') %></h2>

      <%- include('../../partials/flash') %>

      <% if (floor && floor.is_system) { %>
        <div class="alert alert-info mb-4">
          <i class="bi bi-info-circle"></i> <%= t('floors:messages.systemFloor') %>
        </div>
      <% } %>

      <div class="card">
        <div class="card-body">
          <div class="mb-6 pb-6 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= t('common:details') %></h3>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <p class="text-sm text-gray-600"><%= t('common:id') %></p>
                <p class="text-lg font-medium text-gray-900"><%= floor.id %></p>
              </div>
              <div>
                <p class="text-sm text-gray-600"><%= t('common:type') %></p>
                <p>
                  <% if (floor.is_system) { %>
                    <span class="badge badge-info"><%= t('common:system') %></span>
                  <% } else { %>
                    <span class="badge badge-light"><%= t('common:custom') %></span>
                  <% } %>
                </p>
              </div>
              <div>
                <p class="text-sm text-gray-600"><%= t('common:status') %></p>
                <p>
                  <% if (floor.active) { %>
                    <span class="badge badge-success"><%= t('common:active') %></span>
                  <% } else { %>
                    <span class="badge badge-secondary"><%= t('common:inactive') %></span>
                  <% } %>
                </p>
              </div>
              <div>
                <p class="text-sm text-gray-600"><%= t('common:departments') %></p>
                <p class="text-lg font-medium text-gray-900"><%= departmentCount || 0 %></p>
              </div>
            </div>
          </div>

          <% if (!floor.is_system) { %>
            <form method="POST" action="/admin/floors/<%= floor.id %>">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">

              <!-- Floor Name -->
              <div class="mb-4">
                <label for="name" class="form-label">
                  <%= t('floors:fields.name') %> <span class="text-red-600">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  maxlength="50"
                  value="<%= floor.name %>"
                  class="form-input"
                  placeholder="<%= t('floors:placeholders.name') %>"
                >
                <p class="mt-1 text-sm text-gray-500">
                  <%= t('common:maxChars', { count: 50 }) %>
                </p>
              </div>

              <!-- Sort Order -->
              <div class="mb-4">
                <label for="sort_order" class="form-label">
                  <%= t('floors:fields.sortOrder') %> <span class="text-red-600">*</span>
                </label>
                <input
                  type="number"
                  id="sort_order"
                  name="sort_order"
                  required
                  min="0"
                  value="<%= floor.sort_order %>"
                  class="form-input"
                >
                <p class="mt-1 text-sm text-gray-500">
                  <%= t('floors:help.sortOrder') %>
                </p>
              </div>

              <!-- Active Status -->
              <div class="mb-4">
                <label class="flex items-center gap-2">
                  <input
                    type="checkbox"
                    name="active"
                    value="true"
                    <% if (floor.active) { %>checked<% } %>
                    class="form-checkbox"
                  >
                  <span class="text-sm font-medium text-gray-900"><%= t('floors:fields.active') %></span>
                </label>
                <p class="mt-1 text-sm text-gray-500">
                  <% if (!floor.active) { %>
                    <%= t('floors:help.deactivated') %>
                  <% } %>
                </p>
              </div>

              <!-- Buttons -->
              <div class="flex gap-2 pt-6 border-t border-gray-200">
                <button type="submit" class="btn btn-primary">
                  <i class="bi bi-check-lg"></i> <%= t('floors:actions.update') %>
                </button>
                <a href="/admin/floors" class="btn btn-secondary">
                  <i class="bi bi-x-lg"></i> <%= t('common:cancel') %>
                </a>
              </div>
            </form>
          <% } else { %>
            <div class="alert alert-warning">
              <p><%= t('floors:messages.systemFloor') %></p>
              <a href="/admin/floors" class="mt-2 inline-block text-blue-600 hover:text-blue-900">
                &larr; <%= t('common:back') %>
              </a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </main>

  <%- include('../../partials/footer') %>
</body>
</html>

<!DOCTYPE html>
<html lang="<%= language %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= t('floors:title') %> - <%= t('common:app.name') %></title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="bg-gray-50">
  <%- include('../../partials/header') %>

  <main class="container-fluid px-4 py-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold"><%= t('floors:title') %></h2>
      <a href="/admin/floors/new" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i>
        <%= t('floors:actions.create') %>
      </a>
    </div>

    <%- include('../../partials/flash') %>

    <% if (floors && floors.length > 0) { %>
      <div class="card">
        <div class="card-body">
          <table class="table">
            <thead>
              <tr>
                <th><%= t('floors:fields.name') %></th>
                <th><%= t('floors:fields.sortOrder') %></th>
                <th><%= t('floors:fields.status') %></th>
                <th><%= t('floors:fields.type') %></th>
                <th class="text-right"><%= t('common:labels.actions') %></th>
              </tr>
            </thead>
            <tbody>
              <% floors.forEach(floor => { %>
                <tr>
                  <td><strong><%= floor.name %></strong></td>
                  <td><%= floor.sort_order %></td>
                  <td>
                    <% if (floor.active) { %>
                      <span class="badge badge-success"><%= t('common:messages.active') %></span>
                    <% } else { %>
                      <span class="badge badge-secondary"><%= t('common:messages.inactive') %></span>
                    <% } %>
                  </td>
                  <td>
                    <% if (floor.is_system) { %>
                      <span class="badge badge-info"><%= t('common:types.system') %></span>
                    <% } else { %>
                      <span class="badge badge-light"><%= t('common:types.custom') %></span>
                    <% } %>
                  </td>
                  <td class="text-right">
                    <% if (!floor.is_system) { %>
                      <a href="/admin/floors/<%= floor.id %>/edit" class="btn btn-sm btn-outline-primary"><%= t('common:edit') %></a>

                      <% if (floor.active) { %>
                        <form method="POST" action="/admin/floors/<%= floor.id %>/deactivate" style="display:inline;" onsubmit="return confirm('<%= t('floors:confirmDeactivate') %>');">
                          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                          <button type="submit" class="btn btn-sm btn-outline-warning"><%= t('floors:actions.deactivate') %></button>
                        </form>
                      <% } else { %>
                        <form method="POST" action="/admin/floors/<%= floor.id %>/reactivate" style="display:inline;">
                          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                          <button type="submit" class="btn btn-sm btn-outline-success"><%= t('floors:actions.reactivate') %></button>
                        </form>
                      <% } %>
                    <% } else { %>
                      <span class="text-gray-500 text-sm"><%= t('floors:messages.systemFloor') %></span>
                    <% } %>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    <% } else { %>
      <div class="alert alert-warning">
        <p><%= t('common:messages.noData') %></p>
      </div>
    <% } %>
  </main>

  <%- include('../../partials/footer') %>
</body>
</html>

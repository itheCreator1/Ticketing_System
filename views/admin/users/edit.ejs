<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
        crossorigin="anonymous">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/custom.css">
</head>
<body class="bg-light">
  <%- include('../../partials/header') %>

  <main class="container-fluid px-4 py-4">
    <h2 class="mb-4">Edit User: <%= targetUser.username %></h2>
    <%- include('../../partials/flash') %>

    <div class="row g-4">
      <!-- Update User Details Form -->
      <div class="col-lg-6">
        <div class="card shadow-sm">
          <div class="card-body p-4">
            <h3 class="h5 card-title mb-3">User Details</h3>
            <form action="/admin/users/<%= targetUser.id %>" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">

              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" name="username" class="form-control" value="<%= targetUser.username %>"
                       pattern="[a-zA-Z0-9_]{3,50}">
              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" class="form-control" value="<%= targetUser.email %>">
              </div>

              <div class="mb-3">
                <label for="role" class="form-label">Role</label>
                <select id="role" name="role" class="form-select">
                  <option value="admin" <%= targetUser.role === 'admin' ? 'selected' : '' %>>Admin</option>
                  <option value="super_admin" <%= targetUser.role === 'super_admin' ? 'selected' : '' %>>Super Admin</option>
                </select>
              </div>

              <div class="mb-4">
                <label for="status" class="form-label">Status</label>
                <select id="status" name="status" class="form-select">
                  <option value="active" <%= targetUser.status === 'active' ? 'selected' : '' %>>Active</option>
                  <option value="inactive" <%= targetUser.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                </select>
              </div>

              <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Update User</button>
                <a href="/admin/users" class="btn btn-secondary">Cancel</a>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Reset Password Form -->
      <div class="col-lg-6">
        <div class="card shadow-sm">
          <div class="card-body p-4">
            <h3 class="h5 card-title mb-3">Reset Password</h3>
            <div class="alert alert-warning" role="alert">
              <small>Resetting the password will log the user out of all active sessions.</small>
            </div>
            <form action="/admin/users/<%= targetUser.id %>/password" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">

              <div class="mb-3">
                <label for="new-password" class="form-label">New Password</label>
                <input type="password" id="new-password" name="password" class="form-control" minlength="8">
                <div id="password-strength" class="password-strength"></div>
                <small class="form-text text-muted">Minimum 8 characters with uppercase, lowercase, number, and special character</small>
              </div>

              <button type="submit" class="btn btn-warning"
                      onclick="return confirm('Reset password for this user?');">
                Reset Password
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include('../../partials/footer') %>

  <!-- Bootstrap 5 JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
          crossorigin="anonymous"></script>
  <!-- Password Strength -->
  <script src="/js/password-strength.js"></script>
</body>
</html>

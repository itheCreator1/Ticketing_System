<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <!-- Tailwind CSS -->
  <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-gray-50">
  <%- include('../../partials/header') %>

  <main class="container-fluid px-4 py-6">
    <h2 class="text-2xl font-bold mb-4">Edit User: <%= targetUser.username %></h2>
    <%- include('../../partials/flash') %>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
      <!-- Update User Details Form -->
      <div>
        <div class="card">
          <div class="card-body p-4">
            <h3 class="text-lg font-semibold mb-3">User Details</h3>
            <form action="/admin/users/<%= targetUser.id %>" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">

              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" name="username" class="form-input" value="<%= targetUser.username %>"
                       pattern="[a-zA-Z0-9_]{3,50}">
              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" class="form-input" value="<%= targetUser.email %>">
              </div>

              <div class="mb-3">
                <label for="role" class="form-label">Role</label>
                <select id="role" name="role" class="form-select">
                  <option value="admin" <%= targetUser.role === 'admin' ? 'selected' : '' %>>Admin</option>
                  <option value="super_admin" <%= targetUser.role === 'super_admin' ? 'selected' : '' %>>Super Admin</option>
                  <option value="department" <%= targetUser.role === 'department' ? 'selected' : '' %>>Department User</option>
                </select>
              </div>

              <div class="mb-3" id="department-field" style="<%= targetUser.role === 'department' ? '' : 'display: none;' %>">
                <label for="department" class="form-label">Department</label>
                <select id="department" name="department" class="form-select">
                  <option value="">Select Department</option>
                  <% departments.forEach(dept => { %>
                    <option value="<%= dept.name %>" <%= targetUser.department === dept.name ? 'selected' : '' %>><%= dept.name %></option>
                  <% }) %>
                </select>
                <small class="text-sm text-gray-600">Required for department role users</small>
              </div>

              <div class="mb-4">
                <label for="status" class="form-label">Status</label>
                <select id="status" name="status" class="form-select">
                  <option value="active" <%= targetUser.status === 'active' ? 'selected' : '' %>>Active</option>
                  <option value="inactive" <%= targetUser.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                </select>
              </div>

              <div class="flex gap-2">
                <button type="submit" class="btn btn-primary">Update User</button>
                <a href="/admin/users" class="btn btn-secondary">Cancel</a>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Reset Password Form -->
      <div>
        <div class="card">
          <div class="card-body p-4">
            <h3 class="text-lg font-semibold mb-3">Reset Password</h3>
            <div class="alert alert-warning mb-3">
              <small>Resetting the password will log the user out of all active sessions.</small>
            </div>
            <form action="/admin/users/<%= targetUser.id %>/password" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">

              <div class="mb-3">
                <label for="new-password" class="form-label">New Password</label>
                <input type="password" id="new-password" name="password" class="form-input" minlength="8">
                <div id="password-strength" class="password-strength"></div>
                <small class="text-sm text-gray-600">Minimum 8 characters with uppercase, lowercase, number, and special character</small>
              </div>

              <button type="submit" class="btn btn-warning"
                      onclick="return confirm('Reset password for this user?');">
                Reset Password
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include('../../partials/footer') %>

  <!-- Password Strength -->
  <script src="/js/password-strength.js"></script>
  <!-- User Form Validation -->
  <script src="/js/user-form.js"></script>
</body>
</html>

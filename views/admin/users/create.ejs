<!DOCTYPE html>
<html lang="<%= language %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= t('users:management.newUser') %> - <%= t('common:app.name') %></title>
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <!-- Tailwind CSS -->
  <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-gray-50">
  <%- include('../../partials/header') %>

  <main class="container-fluid px-4 py-6">
    <h2 class="text-2xl font-bold mb-4"><%= t('users:management.newUser') %></h2>
    <%- include('../../partials/flash') %>

    <div class="card" style="max-width: 600px;">
      <div class="card-body p-4">
        <form action="/admin/users" method="POST" id="createUserForm">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">

          <div class="mb-3">
            <label for="username" class="form-label"><%= t('users:fields.username') %> *</label>
            <input type="text" id="username" name="username" class="form-input" required
                   pattern="[a-zA-Z0-9_]{3,50}"
                   title="<%= t('users:form.usernameHelp') %>">
            <small class="text-sm text-gray-600"><%= t('users:form.usernameHelp') %></small>
          </div>

          <div class="mb-3">
            <label for="email" class="form-label"><%= t('users:fields.email') %> *</label>
            <input type="email" id="email" name="email" class="form-input" required>
          </div>

          <div class="mb-3">
            <label for="password" class="form-label"><%= t('users:fields.password') %> *</label>
            <input type="password" id="password" name="password" class="form-input" required minlength="8">
            <div id="password-strength" class="password-strength"></div>
            <small class="text-sm text-gray-600"><%= t('users:form.passwordHelp') %></small>
          </div>

          <div class="mb-4">
            <label for="role" class="form-label"><%= t('users:fields.role') %> *</label>
            <select id="role" name="role" class="form-select" required>
              <option value="admin"><%= t('users:roles.admin') %></option>
              <option value="super_admin"><%= t('users:roles.super_admin') %></option>
              <option value="department"><%= t('users:roles.department') %></option>
            </select>
            <small class="text-sm text-gray-600"><%= t('users:management.departmentUserHelp') %></small>
          </div>

          <div class="mb-4" id="department-field" style="display: none;">
            <label for="department" class="form-label"><%= t('users:fields.department') %> *</label>
            <select id="department" name="department" class="form-select">
              <option value=""><%= t('users:form.selectDepartment') %></option>
              <% departments.forEach(dept => { %>
                <option value="<%= dept.name %>"><%= dept.name %></option>
              <% }) %>
            </select>
            <small class="text-sm text-gray-600"><%= t('users:management.departmentRequired') %></small>
          </div>

          <div class="flex gap-2">
            <button type="submit" class="btn btn-primary"><%= t('users:management.createUser') %></button>
            <a href="/admin/users" class="btn btn-secondary"><%= t('common:actions.cancel') %></a>
          </div>
        </form>
      </div>
    </div>
  </main>

  <%- include('../../partials/footer') %>

  <!-- Password Strength -->
  <script src="/js/password-strength.js"></script>
  <!-- User Form Validation -->
  <script src="/js/user-form.js"></script>
</body>
</html>

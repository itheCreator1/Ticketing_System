<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
        crossorigin="anonymous">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/custom.css">
</head>
<body class="bg-light">
  <%- include('../partials/header') %>

  <main class="container-fluid px-4 py-4">
    <nav aria-label="breadcrumb" class="mb-3">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active" aria-current="page">Ticket #<%= ticket.id %></li>
      </ol>
    </nav>

    <h2 class="mb-4">
      Ticket #<%= ticket.id %>: <%= ticket.title %>
      <% if (ticket.reporter_department === 'Internal') { %>
        <span class="badge bg-warning text-dark ms-2">Internal - Admin Only</span>
      <% } %>
    </h2>
    <%- include('../partials/flash') %>

    <div class="row g-4 mb-4">
      <div class="col-md-6">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h3 class="h5 card-title mb-3">Ticket Information</h3>
            <div class="mb-2">
              <span class="fw-semibold">Status:</span>
              <% if (ticket.status === 'open') { %>
                <span class="badge bg-info text-dark ms-2"><%= ticket.status.replace('_', ' ') %></span>
              <% } else if (ticket.status === 'in_progress') { %>
                <span class="badge bg-warning text-dark ms-2"><%= ticket.status.replace('_', ' ') %></span>
              <% } else { %>
                <span class="badge bg-success ms-2"><%= ticket.status.replace('_', ' ') %></span>
              <% } %>
            </div>
            <div class="mb-2">
              <span class="fw-semibold">Priority:</span>
              <% if (ticket.priority === 'unset') { %>
                <span class="badge bg-light text-dark border ms-2"><%= ticket.priority %></span>
              <% } else if (ticket.priority === 'low') { %>
                <span class="badge bg-secondary ms-2"><%= ticket.priority %></span>
              <% } else if (ticket.priority === 'medium') { %>
                <span class="badge bg-info ms-2"><%= ticket.priority %></span>
              <% } else if (ticket.priority === 'high') { %>
                <span class="badge bg-warning text-dark ms-2"><%= ticket.priority %></span>
              <% } else if (ticket.priority === 'critical') { %>
                <span class="badge bg-danger ms-2"><%= ticket.priority %></span>
              <% } %>
            </div>
            <% if (ticket.reporter_name) { %>
              <div class="mb-2">
                <span class="fw-semibold">Reporter:</span>
                <span class="ms-2"><%= ticket.reporter_name %></span>
              </div>
            <% } %>
            <div class="mb-2">
              <span class="fw-semibold">Department:</span>
              <span class="ms-2"><%= ticket.reporter_department %></span>
            </div>
            <% if (ticket.reporter_phone) { %>
              <div class="mb-2">
                <span class="fw-semibold">Phone:</span>
                <span class="ms-2"><a href="tel:<%= ticket.reporter_phone %>"><%= ticket.reporter_phone %></a></span>
              </div>
            <% } %>
            <div class="mb-2">
              <span class="fw-semibold">Created:</span>
              <span class="ms-2 text-muted"><%= new Date(ticket.created_at).toLocaleString() %></span>
            </div>
            <div class="mb-0">
              <span class="fw-semibold">Last Updated:</span>
              <span class="ms-2 text-muted"><%= new Date(ticket.updated_at).toLocaleString() %></span>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h3 class="h5 card-title mb-3">Update Ticket</h3>
            <form action="/admin/tickets/<%= ticket.id %>/update" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">

              <div class="mb-3">
                <label for="status" class="form-label">Status</label>
                <select name="status" id="status" class="form-select">
                  <option value="open" <%= ticket.status === 'open' ? 'selected' : '' %>>Open</option>
                  <option value="in_progress" <%= ticket.status === 'in_progress' ? 'selected' : '' %>>In Progress</option>
                  <option value="waiting_on_admin" <%= ticket.status === 'waiting_on_admin' ? 'selected' : '' %>>Waiting on Admin</option>
                  <option value="waiting_on_department" <%= ticket.status === 'waiting_on_department' ? 'selected' : '' %>>Waiting on Department</option>
                  <option value="closed" <%= ticket.status === 'closed' ? 'selected' : '' %>>Closed</option>
                </select>
              </div>

              <div class="mb-3">
                <label for="priority" class="form-label">Priority</label>
                <select name="priority" id="priority" class="form-select">
                  <option value="unset" <%= ticket.priority === 'unset' ? 'selected' : '' %>>Unset</option>
                  <option value="low" <%= ticket.priority === 'low' ? 'selected' : '' %>>Low</option>
                  <option value="medium" <%= ticket.priority === 'medium' ? 'selected' : '' %>>Medium</option>
                  <option value="high" <%= ticket.priority === 'high' ? 'selected' : '' %>>High</option>
                  <option value="critical" <%= ticket.priority === 'critical' ? 'selected' : '' %>>Critical</option>
                </select>
              </div>

              <button type="submit" class="btn btn-primary w-100">Update Ticket</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <h3 class="h5 card-title mb-3">Description</h3>
        <p class="ticket-description mb-0"><%= ticket.description %></p>
      </div>
    </div>

    <div class="card shadow-sm">
      <div class="card-body">
        <h3 class="h5 card-title mb-3">Comments (<%= comments.length %>)</h3>

        <% if (comments.length > 0) { %>
          <div class="mb-4">
            <% comments.forEach(comment => { %>
              <div class="comment">
                <div class="comment-header">
                  <strong><%= comment.username %></strong>
                  <% if (comment.visibility_type === 'internal') { %>
                    <span class="badge bg-warning text-dark ms-2">Internal</span>
                  <% } %>
                  <span class="comment-meta ms-2"><%= new Date(comment.created_at).toLocaleString() %></span>
                </div>
                <div class="comment-content mt-2">
                  <%= comment.content %>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <p class="text-muted mb-4">No comments yet. Be the first to add one!</p>
        <% } %>

        <h4 class="h6 mb-3">Add Comment</h4>
        <form action="/admin/tickets/<%= ticket.id %>/comments" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">

          <div class="mb-3">
            <textarea name="content" id="content" rows="4" class="form-control" placeholder="Write your comment here..." required></textarea>
          </div>

          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="is_internal" name="is_internal">
            <label class="form-check-label" for="is_internal">
              Internal Comment <small class="text-muted">(visible only to admins)</small>
            </label>
          </div>

          <button type="submit" class="btn btn-primary">Add Comment</button>
        </form>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>

  <!-- Bootstrap 5 JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
          crossorigin="anonymous"></script>
</body>
</html>

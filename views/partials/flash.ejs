<% if (success_msg && success_msg.length > 0) { %>
  <div class="alert alert-success" role="alert">
    <% success_msg.forEach(msg => { %>
      <p class="mb-0"><%= msg %></p>
    <% }); %>
    <button type="button" class="absolute top-3 right-3 text-green-800 hover:text-green-900" onclick="this.parentElement.remove()" aria-label="Close">
      <i class="bi bi-x-lg"></i>
    </button>
  </div>
<% } %>

<% if (error_msg && error_msg.length > 0) { %>
  <div class="alert alert-danger" role="alert">
    <% error_msg.forEach(msg => { %>
      <p class="mb-0"><%= msg %></p>
    <% }); %>
    <button type="button" class="absolute top-3 right-3 text-red-800 hover:text-red-900" onclick="this.parentElement.remove()" aria-label="Close">
      <i class="bi bi-x-lg"></i>
    </button>
  </div>
<% } %>

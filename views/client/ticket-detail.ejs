<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="bg-gray-50">
  <%- include('../partials/header') %>

  <main class="container-fluid px-4 py-6">
    <nav aria-label="breadcrumb" class="mb-6">
      <ol class="flex items-center space-x-2 text-sm text-gray-600">
        <li><a href="/client/dashboard" class="hover:text-blue-600">My Tickets</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="text-gray-900">Ticket #<%= ticket.id %></li>
      </ol>
    </nav>

    <h2 class="text-2xl font-bold mb-6">Ticket #<%= ticket.id %>: <%= ticket.title %></h2>
    <%- include('../partials/flash') %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <div class="card">
        <div class="card-body">
          <h3 class="text-lg font-semibold mb-4">Ticket Information</h3>
          <div class="space-y-3">
            <div>
              <span class="font-medium">Status:</span>
              <% if (ticket.status === 'open') { %>
                <span class="badge badge-primary ml-2">Open</span>
              <% } else if (ticket.status === 'in_progress') { %>
                <span class="badge badge-info ml-2">In Progress</span>
              <% } else if (ticket.status === 'waiting_on_admin') { %>
                <span class="badge badge-warning ml-2">Waiting on Admin</span>
              <% } else if (ticket.status === 'waiting_on_department') { %>
                <span class="badge badge-secondary ml-2">Waiting on You</span>
              <% } else if (ticket.status === 'closed') { %>
                <span class="badge badge-success ml-2">Closed</span>
              <% } %>
            </div>
            <div>
              <span class="font-medium">Priority:</span>
              <% if (ticket.priority === 'critical') { %>
                <span class="badge badge-danger ml-2">Critical</span>
              <% } else if (ticket.priority === 'high') { %>
                <span class="badge badge-warning ml-2">High</span>
              <% } else if (ticket.priority === 'medium') { %>
                <span class="badge badge-info ml-2">Medium</span>
              <% } else if (ticket.priority === 'low') { %>
                <span class="badge badge-secondary ml-2">Low</span>
              <% } else { %>
                <span class="badge badge-light ml-2">Unset</span>
              <% } %>
            </div>
            <% if (ticket.reporter_name) { %>
              <div>
                <span class="font-medium">Reporter:</span>
                <span class="ml-2"><%= ticket.reporter_name %></span>
              </div>
            <% } %>
            <div>
              <span class="font-medium">Department:</span>
              <span class="ml-2"><%= ticket.reporter_department %></span>
            </div>
            <% if (ticket.reporter_phone) { %>
              <div>
                <span class="font-medium">Phone:</span>
                <span class="ml-2"><a href="tel:<%= ticket.reporter_phone %>" class="text-blue-600 hover:underline"><%= ticket.reporter_phone %></a></span>
              </div>
            <% } %>
            <div>
              <span class="font-medium">Created:</span>
              <span class="ml-2 text-gray-600"><%= new Date(ticket.created_at).toLocaleString() %></span>
            </div>
            <div>
              <span class="font-medium">Last Updated:</span>
              <span class="ml-2 text-gray-600"><%= new Date(ticket.updated_at).toLocaleString() %></span>
            </div>
            <% if (ticket.assigned_to_username) { %>
              <div>
                <span class="font-medium">Assigned to:</span>
                <span class="ml-2 badge badge-dark"><%= ticket.assigned_to_username %></span>
              </div>
            <% } %>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h3 class="text-lg font-semibold mb-4">Update Status</h3>
          <% if (ticket.status !== 'closed') { %>
            <div class="space-y-3">
              <form action="/client/tickets/<%= ticket.id %>/status" method="POST" class="status-form">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" name="status" value="waiting_on_admin">
                <button type="submit" class="w-full <%= ticket.status === 'waiting_on_admin' ? 'btn btn-warning' : 'btn btn-outline-warning' %>">
                  Waiting on Admin
                </button>
              </form>

              <form action="/client/tickets/<%= ticket.id %>/status" method="POST" class="status-form" data-confirm="closed">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" name="status" value="closed">
                <button type="submit" class="w-full <%= ticket.status === 'closed' ? 'btn btn-success' : 'btn btn-outline-success' %>">
                  Close Ticket
                </button>
              </form>
            </div>
            <div class="text-sm text-gray-600 mt-3">
              Use "Waiting on Admin" if you need further assistance. Use "Close Ticket" if your issue is resolved.
            </div>

            <script>
            document.addEventListener('DOMContentLoaded', function() {
              document.querySelectorAll('.status-form[data-confirm]').forEach(form => {
                form.addEventListener('submit', function(e) {
                  if (!confirm('Are you sure you want to close this ticket? You can contact an administrator to reopen it if needed.')) {
                    e.preventDefault();
                    return false;
                  }
                });
              });
            });
            </script>
          <% } else { %>
            <div class="alert alert-success">
              <p class="mb-0">This ticket has been closed. If you need to reopen it, please contact an administrator or create a new ticket.</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <div class="card mb-6">
      <div class="card-body">
        <h3 class="text-lg font-semibold mb-4">Description</h3>
        <p class="whitespace-pre-wrap"><%= ticket.description %></p>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h3 class="text-lg font-semibold mb-4">Comments (<%= comments.length %>)</h3>

        <% if (comments.length > 0) { %>
          <div class="space-y-4 mb-6">
            <% comments.forEach(comment => { %>
              <div class="comment">
                <div class="flex items-center justify-between mb-2">
                  <strong><%= comment.username %></strong>
                  <span class="text-sm text-gray-500"><%= new Date(comment.created_at).toLocaleString() %></span>
                </div>
                <div class="text-gray-700">
                  <%= comment.content %>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <p class="text-gray-500 mb-6">No comments yet.</p>
        <% } %>

        <% if (ticket.status !== 'closed') { %>
          <form action="/client/tickets/<%= ticket.id %>/comments" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-4">
              <label for="content" class="form-label">Add a Comment</label>
              <textarea id="content" name="content" rows="4" class="form-textarea" required placeholder="Write your comment here..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Add Comment</button>
          </form>
        <% } else { %>
          <div class="alert alert-info">
            <p class="mb-0">Comments are disabled for closed tickets.</p>
          </div>
        <% } %>
      </div>
    </div>
  </main>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
        crossorigin="anonymous">
  <link rel="stylesheet" href="/css/custom.css">
</head>
<body class="bg-light">
  <%- include('../partials/header') %>

  <main class="container-fluid px-4 py-4">
    <nav aria-label="breadcrumb" class="mb-3">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/client/dashboard">My Tickets</a></li>
        <li class="breadcrumb-item active" aria-current="page">Ticket #<%= ticket.id %></li>
      </ol>
    </nav>

    <h2 class="mb-4">Ticket #<%= ticket.id %>: <%= ticket.title %></h2>
    <%- include('../partials/flash') %>

    <div class="row g-4 mb-4">
      <div class="col-md-6">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h3 class="h5 card-title mb-3">Ticket Information</h3>
            <div class="mb-2">
              <span class="fw-semibold">Status:</span>
              <% if (ticket.status === 'open') { %>
                <span class="badge bg-primary ms-2">Open</span>
              <% } else if (ticket.status === 'in_progress') { %>
                <span class="badge bg-info text-dark ms-2">In Progress</span>
              <% } else if (ticket.status === 'waiting_on_admin') { %>
                <span class="badge bg-warning text-dark ms-2">Waiting on Admin</span>
              <% } else if (ticket.status === 'waiting_on_department') { %>
                <span class="badge bg-secondary ms-2">Waiting on You</span>
              <% } else if (ticket.status === 'closed') { %>
                <span class="badge bg-success ms-2">Closed</span>
              <% } %>
            </div>
            <div class="mb-2">
              <span class="fw-semibold">Priority:</span>
              <% if (ticket.priority === 'critical') { %>
                <span class="badge bg-danger ms-2">Critical</span>
              <% } else if (ticket.priority === 'high') { %>
                <span class="badge bg-warning text-dark ms-2">High</span>
              <% } else if (ticket.priority === 'medium') { %>
                <span class="badge bg-info ms-2">Medium</span>
              <% } else if (ticket.priority === 'low') { %>
                <span class="badge bg-secondary ms-2">Low</span>
              <% } else { %>
                <span class="badge bg-light text-dark border ms-2">Unset</span>
              <% } %>
            </div>
            <% if (ticket.reporter_name) { %>
              <div class="mb-2">
                <span class="fw-semibold">Reporter:</span>
                <span class="ms-2"><%= ticket.reporter_name %></span>
              </div>
            <% } %>
            <div class="mb-2">
              <span class="fw-semibold">Department:</span>
              <span class="ms-2"><%= ticket.reporter_department %></span>
            </div>
            <% if (ticket.reporter_phone) { %>
              <div class="mb-2">
                <span class="fw-semibold">Phone:</span>
                <span class="ms-2"><a href="tel:<%= ticket.reporter_phone %>"><%= ticket.reporter_phone %></a></span>
              </div>
            <% } %>
            <div class="mb-2">
              <span class="fw-semibold">Created:</span>
              <span class="ms-2 text-muted"><%= new Date(ticket.created_at).toLocaleString() %></span>
            </div>
            <div class="mb-0">
              <span class="fw-semibold">Last Updated:</span>
              <span class="ms-2 text-muted"><%= new Date(ticket.updated_at).toLocaleString() %></span>
            </div>
            <% if (ticket.assigned_to_username) { %>
              <div class="mt-2">
                <span class="fw-semibold">Assigned to:</span>
                <span class="ms-2 badge bg-dark"><%= ticket.assigned_to_username %></span>
              </div>
            <% } %>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h3 class="h5 card-title mb-3">Update Status</h3>
            <% if (ticket.status !== 'closed') { %>
              <form action="/client/tickets/<%= ticket.id %>/status" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <div class="mb-3">
                  <label for="status" class="form-label">Change Status</label>
                  <select name="status" id="status" class="form-select">
                    <option value="waiting_on_admin" <%= ticket.status === 'waiting_on_admin' ? 'selected' : '' %>>
                      Waiting on Admin
                    </option>
                    <option value="closed" <%= ticket.status === 'closed' ? 'selected' : '' %>>
                      Closed
                    </option>
                  </select>
                  <div class="form-text">
                    Use "Waiting on Admin" if you need further assistance. Use "Closed" if your issue is resolved.
                  </div>
                </div>

                <button type="submit" class="btn btn-primary w-100">Update Status</button>
              </form>
            <% } else { %>
              <div class="alert alert-success mb-0">
                <p class="mb-0">This ticket has been closed. If you need to reopen it, please contact an administrator or create a new ticket.</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <h3 class="h5 card-title mb-3">Description</h3>
        <p class="ticket-description mb-0"><%= ticket.description %></p>
      </div>
    </div>

    <div class="card shadow-sm">
      <div class="card-body">
        <h3 class="h5 card-title mb-3">Comments (<%= comments.length %>)</h3>

        <% if (comments.length > 0) { %>
          <div class="mb-4">
            <% comments.forEach(comment => { %>
              <div class="comment">
                <div class="comment-header">
                  <strong><%= comment.username %></strong>
                  <span class="comment-meta ms-2"><%= new Date(comment.created_at).toLocaleString() %></span>
                </div>
                <div class="comment-content mt-2">
                  <%= comment.content %>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <p class="text-muted mb-4">No comments yet.</p>
        <% } %>

        <% if (ticket.status !== 'closed') { %>
          <form action="/client/tickets/<%= ticket.id %>/comments" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label for="content" class="form-label">Add a Comment</label>
              <textarea id="content" name="content" rows="4" class="form-control" required placeholder="Write your comment here..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Add Comment</button>
          </form>
        <% } else { %>
          <div class="alert alert-info mb-0">
            <p class="mb-0">Comments are disabled for closed tickets.</p>
          </div>
        <% } %>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
          crossorigin="anonymous"></script>
</body>
</html>

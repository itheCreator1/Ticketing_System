<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="bg-gray-50">
  <%- include('../partials/header') %>

  <main class="container-fluid px-4 py-6">
    <div class="flex justify-between items-center mb-6">
      <div>
        <h2 class="text-2xl font-bold mb-3">My Tickets</h2>
        <%
        const openCount = tickets.filter(t => t.status === 'open').length;
        const inProgressCount = tickets.filter(t => t.status === 'in_progress').length;
        const waitingOnYouCount = tickets.filter(t => t.status === 'waiting_on_department').length;
        %>
        <div class="flex gap-3">
          <span class="stat-badge stat-open">
            <i class="bi bi-inbox-fill"></i>
            <span><%= openCount %> Open</span>
          </span>
          <span class="stat-badge stat-progress">
            <i class="bi bi-gear-fill"></i>
            <span><%= inProgressCount %> In Progress</span>
          </span>
          <% if (waitingOnYouCount > 0) { %>
            <span class="stat-badge stat-waiting">
              <i class="bi bi-exclamation-circle-fill"></i>
              <span><%= waitingOnYouCount %> Waiting on You</span>
            </span>
          <% } %>
        </div>
      </div>
      <a href="/client/tickets/new" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create New Ticket
      </a>
    </div>

    <%- include('../partials/flash') %>

    <div class="card mb-6">
      <div class="card-body">
        <form action="/client/dashboard" method="GET">
          <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
            <div>
              <label for="status" class="form-label">Status</label>
              <select name="status" id="status" class="form-select">
                <option value="">All Statuses</option>
                <option value="open" <%= filters.status === 'open' ? 'selected' : '' %>>Open</option>
                <option value="in_progress" <%= filters.status === 'in_progress' ? 'selected' : '' %>>In Progress</option>
                <option value="waiting_on_admin" <%= filters.status === 'waiting_on_admin' ? 'selected' : '' %>>Waiting on Admin</option>
                <option value="waiting_on_department" <%= filters.status === 'waiting_on_department' ? 'selected' : '' %>>Waiting on You</option>
                <option value="closed" <%= filters.status === 'closed' ? 'selected' : '' %>>Closed</option>
              </select>
            </div>

            <div>
              <label for="priority" class="form-label">Priority</label>
              <select name="priority" id="priority" class="form-select">
                <option value="">All Priorities</option>
                <option value="unset" <%= filters.priority === 'unset' ? 'selected' : '' %>>Unset</option>
                <option value="low" <%= filters.priority === 'low' ? 'selected' : '' %>>Low</option>
                <option value="medium" <%= filters.priority === 'medium' ? 'selected' : '' %>>Medium</option>
                <option value="high" <%= filters.priority === 'high' ? 'selected' : '' %>>High</option>
                <option value="critical" <%= filters.priority === 'critical' ? 'selected' : '' %>>Critical</option>
              </select>
            </div>

            <div class="md:col-span-2">
              <label for="search" class="form-label">Search</label>
              <input type="text" name="search" id="search" class="form-input" placeholder="Search tickets..." value="<%= filters.search || '' %>">
            </div>

            <div class="flex items-end">
              <div class="flex gap-2 w-full">
                <button type="submit" class="btn btn-primary flex-1">Filter</button>
                <% if (filters.status || filters.priority || filters.search) { %>
                  <a href="/client/dashboard" class="btn btn-secondary">Clear</a>
                <% } %>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>

    <% if (tickets.length === 0) { %>
      <div class="empty-state">
        <i class="bi bi-inbox empty-state-icon"></i>
        <h4 class="text-xl font-semibold mt-4 mb-2">
          <% if (filters.status || filters.priority || filters.search) { %>
            No Tickets Found
          <% } else { %>
            No Tickets Yet
          <% } %>
        </h4>
        <p class="text-gray-600 mb-6">
          <% if (filters.status || filters.priority || filters.search) { %>
            Try adjusting your filters to find what you're looking for.
          <% } else { %>
            Create your first ticket to get started. Our support team is here to help!
          <% } %>
        </p>
        <% if (!filters.status && !filters.priority && !filters.search) { %>
          <a href="/client/tickets/new" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Create Your First Ticket
          </a>
        <% } else { %>
          <a href="/client/dashboard" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Clear Filters
          </a>
        <% } %>
      </div>
    <% } else { %>
      <div class="card mb-4">
        <div class="overflow-x-auto">
          <table class="table">
            <thead>
              <tr>
                <th class="w-20">ID</th>
                <th>Title</th>
                <th class="w-44">Status</th>
                <th class="w-36">Priority</th>
                <th class="w-64">Last Comment</th>
                <th class="w-32">Created</th>
                <th class="w-28">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% tickets.forEach(ticket => { %>
                <tr>
                  <td class="font-bold text-blue-600">#<%= ticket.id %></td>
                  <td>
                    <a href="/client/tickets/<%= ticket.id %>" class="ticket-link">
                      <%= ticket.title %>
                    </a>
                  </td>
                  <td>
                    <% if (ticket.status === 'open') { %>
                      <span class="badge-status badge-status-open">
                        <i class="bi bi-inbox-fill"></i>
                        <span>Open</span>
                      </span>
                    <% } else if (ticket.status === 'in_progress') { %>
                      <span class="badge-status badge-status-progress">
                        <i class="bi bi-gear-fill"></i>
                        <span>In Progress</span>
                      </span>
                    <% } else if (ticket.status === 'waiting_on_admin') { %>
                      <span class="badge-status badge-status-waiting-admin">
                        <i class="bi bi-hourglass-split"></i>
                        <span>Waiting on Admin</span>
                      </span>
                    <% } else if (ticket.status === 'waiting_on_department') { %>
                      <span class="badge-status badge-status-waiting-dept">
                        <i class="bi bi-exclamation-circle-fill"></i>
                        <span>Waiting on You</span>
                      </span>
                    <% } else if (ticket.status === 'closed') { %>
                      <span class="badge-status badge-status-closed">
                        <i class="bi bi-check-circle-fill"></i>
                        <span>Closed</span>
                      </span>
                    <% } %>
                  </td>
                  <td>
                    <% if (ticket.priority === 'critical') { %>
                      <span class="badge-priority badge-priority-critical">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <span>Critical</span>
                      </span>
                    <% } else if (ticket.priority === 'high') { %>
                      <span class="badge-priority badge-priority-high">
                        <i class="bi bi-arrow-up-circle-fill"></i>
                        <span>High</span>
                      </span>
                    <% } else if (ticket.priority === 'medium') { %>
                      <span class="badge-priority badge-priority-medium">
                        <i class="bi bi-dash-circle-fill"></i>
                        <span>Medium</span>
                      </span>
                    <% } else if (ticket.priority === 'low') { %>
                      <span class="badge-priority badge-priority-low">
                        <i class="bi bi-arrow-down-circle-fill"></i>
                        <span>Low</span>
                      </span>
                    <% } else { %>
                      <span class="badge-priority badge-priority-unset">
                        <i class="bi bi-circle"></i>
                        <span>Unset</span>
                      </span>
                    <% } %>
                  </td>
                  <td class="text-sm text-gray-600 max-w-xs truncate">
                    <% if (ticket.last_comment) { %>
                      <%= ticket.last_comment.length > 100 ? ticket.last_comment.substring(0, 100) + '...' : ticket.last_comment %>
                    <% } else { %>
                      <span class="text-gray-400">No comments</span>
                    <% } %>
                  </td>
                  <td class="text-gray-500"><%= new Date(ticket.created_at).toLocaleDateString() %></td>
                  <td>
                    <a href="/client/tickets/<%= ticket.id %>" class="btn btn-sm btn-primary">
                      <i class="bi bi-eye"></i> View
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="flex items-center gap-2 text-gray-600">
        <i class="bi bi-list-check"></i>
        <span>Showing <%= tickets.length %> ticket<%= tickets.length !== 1 ? 's' : '' %></span>
      </div>
    <% } %>
  </main>
</body>
</html>

<!DOCTYPE html>
<html lang="<%= language %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= t('errors:500.title') %></title>
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <!-- Tailwind CSS -->
  <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-gray-50">
  <div class="container">
    <div class="flex justify-center items-center min-h-screen">
      <div class="w-full max-w-4xl px-4">
        <div class="text-center mb-4">
          <!-- Error Icon -->
          <div class="error-icon mb-4">
            <i class="bi bi-exclamation-triangle-fill text-9xl text-red-600"></i>
          </div>

          <h1 class="text-9xl font-bold text-red-600 mb-3">500</h1>
          <h2 class="text-2xl mb-3 text-gray-600"><%= t('errors:500.heading') %></h2>
          <p class="text-lg text-gray-600 mb-4">
            <%= t('errors:500.message') %>
          </p>

          <!-- Action Buttons -->
          <div class="flex gap-2 justify-center flex-wrap mb-4">
            <button onclick="window.history.back()" class="btn btn-primary btn-lg">
              <i class="bi bi-arrow-left mr-2"></i><%= t('errors:buttons.goBack') %>
            </button>
            <a href="/" class="btn btn-outline-primary btn-lg">
              <i class="bi bi-house-door mr-2"></i><%= t('errors:buttons.goHome') %>
            </a>
            <% if (user) { %>
              <a href="/admin/dashboard" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-speedometer2 mr-2"></i><%= t('errors:buttons.dashboard') %>
              </a>
            <% } %>
          </div>
        </div>

        <!-- Troubleshooting Panel -->
        <%- include('../partials/troubleshooting', { correlationId: correlationId, status: status, isDevelopment: isDevelopment, stackTrace: stackTrace, errorCategory: errorCategory }) %>
      </div>
    </div>
  </div>
</body>
</html>

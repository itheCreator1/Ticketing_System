<!DOCTYPE html>
<html lang="<%= language %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= t('errors:403.title') %></title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="bg-gray-50">
  <div class="container">
    <div class="flex justify-center items-center min-h-screen">
      <div class="max-w-4xl w-full">
        <div class="text-center mb-6">
          <div class="mb-6">
            <i class="bi bi-shield-lock-fill text-9xl text-yellow-500"></i>
          </div>

          <h1 class="text-9xl font-bold text-yellow-500 mb-4">403</h1>
          <h2 class="text-2xl mb-4 text-gray-600"><%= t('errors:403.heading') %></h2>
          <p class="text-lg text-gray-600 mb-6">
            <%= t('errors:403.message') %>
          </p>

          <div class="flex gap-2 justify-center flex-wrap mb-6">
            <% if (!user) { %>
              <a href="/auth/login" class="btn btn-primary btn-lg">
                <i class="bi bi-box-arrow-in-right mr-2"></i><%= t('errors:buttons.login') %>
              </a>
              <a href="/" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-house-door mr-2"></i><%= t('errors:buttons.goHome') %>
              </a>
            <% } else { %>
              <a href="/admin/dashboard" class="btn btn-primary btn-lg">
                <i class="bi bi-speedometer2 mr-2"></i><%= t('errors:buttons.dashboard') %>
              </a>
              <button onclick="window.history.back()" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left mr-2"></i><%= t('errors:buttons.goBack') %>
              </button>
            <% } %>
          </div>
        </div>

        <%- include('../partials/troubleshooting', { correlationId: correlationId, status: status, isDevelopment: isDevelopment, stackTrace: stackTrace, errorCategory: errorCategory }) %>
      </div>
    </div>
  </div>
</body>
</html>
